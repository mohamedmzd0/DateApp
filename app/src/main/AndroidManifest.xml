<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.date.fourth.name">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.DateApp">
        <activity
            android:name=".ui.SplashActivity"
            android:configChanges="orientation|uiMode|touchscreen|smallestScreenSize|screenLayout|keyboard|mnc|mcc|locale|layoutDirection|fontScale|keyboardHidden|navigation|colorMode|density|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|uiMode|touchscreen|smallestScreenSize|screenLayout|keyboard|mnc|mcc|locale|layoutDirection|fontScale|keyboardHidden|navigation|colorMode|density|screenSize">

        </activity>
    </application>

</manifest>